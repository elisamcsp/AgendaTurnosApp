@inject NavigationManager NavigationManager

<div class="alert alert-secondary mt-4" role="alert" style="background-color:lightgreen; cursor:pointer" @onclick="NavigateToShift">
    <span class="oi oi-clock mr-2" aria-hidden="true"></span>
    <strong>Hora: </strong> @Shift.ShiftDate.ToLongTimeString()

    <span class="text-nowrap ml-6">
        <span class="oi oi-person mr-2" aria-hidden="true"></span>
        <strong>Paciente: </strong> @Shift.PatientFullName
    </span>

    <span class="text-nowrap ml-6">
        <span class="oi oi-medical-cross mr-2" aria-hidden="true"></span>
        <strong>  Doctor: </strong> @Shift.DoctorFullName
    </span>
</div>

@code {
    public TimeSpan timeShift;

    [Parameter]
    public Shift Shift { get; set; }

    protected override void OnInitialized()
    {
        timeShift = new TimeSpan(Shift.ShiftDate.Ticks);
    }

    private void NavigateToShift()
    {
        NavigationManager.NavigateTo($"/shift/edit/{Shift.Id}");
    }
}